

<% @posts.each do |post| %>
	<div class="row">	
		<div class="col-md-12 rowheight">
					<div class="col-md-2">
						<%= post.created_at.strftime('%c') %>
					</div>			
					<div class="col-md-8">
						<span class="title"><%= post.title.truncate(50) %> </span><br>
						<span class="font10 pull-right"> (<%= post.comments.count %>) Comment's</span>
					</div>


						<div class="col-md-2">
							<div class="col-md-1">
								<%= link_to "", post_path(post), :class=>"fa fa-eye fa-fw"   %>
							</div>

							<% if user_signed_in? && post.user_id==current_user.id %>
								<div class="col-md-1">
									<%= link_to "", edit_post_path(post), :class=>"fa fa-pencil fa-fw"  %>
								</div>
								<div class="col-md-1">
									<%= link_to "", post_path(post) , :class=>"fa fa-trash-o fa-fw", 
											method: :delete,
											data:{ confirm: 'Are you sure ?' }%>
								</div>
							<% end %>
						</div>
						
						<br/>
						<hr>

			</div>
    </div>

<% end %>
    
<div class="row">
	<div class="center">
		<% @posts.each do |post| %>
			<% if post.photo? %>
	    		<%= link_to (image_tag post.photo.url(:thumb)), post_path(post) %>
			<%end%>
		<%end%>
	</div>	
</div>	

