<h1>All Posts</h1>
<p><%= link_to "New Post", new_post_path %></p>
<div>
	<table>
		<tr>
			<td>Title</td>
			<td>Body</td>
		</tr>

		<% @posts.each do |post| %>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.body %></td>


			<% if user_signed_in? %>
				<td><%= link_to "", post_path(post), :class=>"fa fa-eye fa-fw"   %></td>
				<td><%= link_to "", edit_post_path(post), :class=>"fa fa-pencil fa-fw"  %></td>
				<td><%= link_to "", post_path(post) , :class=>"fa fa-trash-o fa-fw", 
						method: :delete,
						data:{ confirm: 'Are you sure ?' }%></td>
			<% end %>
			</tr>
		<% end %>

	</table>
</div>
