<h1>Post Preview</h1>
<div>
	<p>Title: <%= @post.title %></p>
	<p>Body: <%= @post.body %></p>

<h4>Current Comment's (<%= @post.comments.count %>) </h4>
<div>
	<% @post.comments.each do |comment| %>
	<p><%= comment.body %></p>
	<p><%= time_ago_in_words comment.created_at %> ago1 <%= link_to "Delete", [comment.post,comment],
	method: :delete,
	data:{ confirm: 'Are you sure ?'} %></p>
	<% end %>
</div>

<h4>New Comment</h4>
<div>
	<%= form_for ([@post,@post.comments.build]) do |f| %>
	<p><%= f.text_area :body %></p>
	<p><%= f.submit "Add Comment" %></p>
	<% end %>
</div>



	<%= link_to "Edit", edit_post_path(@post) %>
	<%= link_to "Back", posts_path %>
</div>
